<div class="panel panel-default">
  <div class="panel-body">
    <!--Photo principale de l'annonce-->
    <div class="row">
            <div class="col-md-12">
                <%= image_tag @photos[0].image.url(), class: "img-responsive" if @photos.length > 0  %>
            </div>
        </div>
        
    <!--Information principale-->
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@room.user), class: "img-circle avatar-large " %>
            <br>
            <br>
            <%= @room.user.fullname %>
          </div>
          <div class="col-md-9">
            <h4><%= @room.listing_name %></h4>
            <%= @room.address %>
            <div class="row text-center row-space-1">
              <div class="col-sm-3">
                <i class= "fa fa-home fa-2x"></i>
              </div>
              <div class="col-sm-3">
                <i class= "fa fa-users fa-2x"></i>
              </div>
              <div class="col-sm-3">
                <i class= "fa fa-bed fa-2x"></i>
              </div>
              <div class="col-sm-3">
                <i class= "fa fa-bath fa-2x"></i>
              </div>
            </div>
            <div class="row text-center">
              <div class="col-sm-3">
                <%= @room.home_type %>
              </div>
              <div class="col-sm-3">
                <%= @room.accommodate %><%= @room.accommodate > 1 ? "voyageurs":"voyageur" %>
              </div>
              <div class="col-sm-3">
                <%= @room.bed_room %><%= @room.bed_room > 1 ? "lits":"lit" %>
              </div>
              <div class="col-sm-3">
                <%= @room.bath_room %><%= @room.bath_room > 1 ? "salles de bains":"salle de bain" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <!-- Formulaire de réservation -->
      </div>
    </div>

    <!--Description du logement-->
    <div class="row">
      <div class="col-md-12">
        <h2>A propos de ce logement</h2>
        <p><%= @room.summary %></p>
      </div>
    </div>
    
    <!--Equipement-->
    <div class="row">
      <div class="col-md-2">
        <p>Equipements</p>
      </div>
        <div class="col-md-10">
          <div class="row">
            <div class="col-md-6">
              <ul class="equipements">
                <li class="<%= "text-line-through" if !@room.is_wifi %>">WIFI</li>
                <li class="<%= "text-line-through" if !@room.is_tv %>">Télévision</li>
                <li class="<%= "text-line-through" if !@room.is_closet %>">Penderie/Commode</li>
                <li class="<%= "text-line-through" if !@room.is_shampoo %>">Shampoo</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="equipements">
                <li class="<%= "text-line-through" if !@room.is_kitchen %>">Cuisine</li>
                <li class="<%= "text-line-through" if !@room.is_breakfast %>">Petit dej</li>
                <li class="<%= "text-line-through" if !@room.is_heating %>">Chauffage</li>
                <li class="<%= "text-line-through" if !@room.is_air %>">Air conditionné</li>
              </ul>
            </div>
          </div>
        </div>
    </div>
    
  </div>
</div>