<div class="panel panel-default">
  <div class="panel-heading">
    Devenez hote AirBB
  </div>
  <div class="panel-body">
    <div class="container">
      
      <%= form_for @room do |f| %>
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Genre d'habitation</label>
              <%= f.select :home_type, [['Maison','Maison'],['Appartement','Appartement'], ['B&B','B&B']], 
              id: 'home_type', prompt:'A selectionner...', class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Type de logement</label>
              <%= f.select :room_type, [['Logement entier','Logement entier'],['Chambre privee','Chambre privee'], ['Chambre partagee','Chambre partagee']],prompt:'A selectionner...', class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Combien de voyageurs ?</label>
              <%= f.select :accommodate, [['1 voyageur',1],['2 voyageurs',2], ['3 voyageurs',3],['4 voyageurs',4],['5 voyageurs',5], ['6 voyageurs',6]], 
              prompt:'A selectionner...', class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Chambres</label>
              <%= f.select :bed_room, [['1',1],['2',2], ['3',3], ['4',4]],prompt:'A selectionner...', class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Salle de bains</label>
              <%= f.select :bath_room, [['1',1],['2',2], ['3',3],['4',4]],prompt:'A selectionner...', class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group">
            <label>Donnez un nom au logement</label>
            <%= f.text_field :listing_name, placeholder: "Titre de l'annonce", class: 'form-control' %>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group">
            <label>Resume</label>
            <%= f.text_area :summary, placeholder: "Decrivez le decor, ambiance, proximite", class: 'form-control' %>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group">
            <label>Adresse</label>
            <%= f.text_field :address, placeholder: "Ou est situe votre logement", class: 'form-control' %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :is_wifi %> WIFI
            </div>
            <div class="form-group">
              <%= f.check_box :is_tv %> Television
            </div>
            <div class="form-group">
              <%= f.check_box :is_closet %> Closet
            </div>
            <div class="form-group">
              <%= f.check_box :is_shampoo %> Shampoo
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :is_breakfast %> Petit dej
            </div>
            <div class="form-group">
              <%= f.check_box :is_heating %> chauffage
            </div>
            <div class="form-group">
              <%= f.check_box :is_air %> Air conditionne
            </div>
            <div class="form-group">
              <%= f.check_box :is_kitchen %> Cuisine
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Prix par nuit</label>
              <div class="input-group">
                <%= f.text_field :price, placeholder: 'ex: 45 euros', class: 'form-control' %>
              </div><div class= 'input-group-addon'>Euros</div>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group">
            <%= f.check_box :active %> Annonce Active
          </div>
        </div>
        
        <div class="actions">
          <%= f.submit "Je valide mon annonce", class: "btn btn-primary" %>
        </div>
    
    <% end %>
  
  </div>
</div>